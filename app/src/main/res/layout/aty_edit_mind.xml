<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <fred.angel.com.mgank.component.widget.IToolbar
        android:id="@id/i_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightView="@layout/toolbar_mind_operation"
        ></fred.angel.com.mgank.component.widget.IToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                android:text="2017/04/12"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                />

            <TextView
                android:id="@+id/city_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/Color_Gray"
                android:text="beij"
                android:paddingBottom="10dp"
                />

            <fred.angel.com.mgank.component.widget.AspectRatioImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorAccent"
                app:viewAspectRatio="1.3" />

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/Color_Gray"
                android:text="beij"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                />

            <EditText
                android:id="@+id/content_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:background="@drawable/bg_edit_conner"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="top"
                android:padding="10dp"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/author_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/Color_Gray"
                android:text="beij"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>