<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@drawable/dark_press_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/text_black"
        android:paddingTop="5dp"
        android:text="内容"
        android:layout_alignTop="@id/img"
        android:layout_toRightOf="@id/img"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/creator_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_grey_15dp"
        android:layout_alignBottom="@id/img"
        android:layout_toRightOf="@id/img"
        android:layout_alignLeft="@id/content_tv"
        android:textColor="@color/grey"
        android:gravity="center"
        android:text="who"
        android:textSize="@dimen/note_text_size"
        android:drawablePadding="3dp"
        />

    <TextView
        android:id="@+id/create_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_time_grey_15dp"
        android:layout_alignBottom="@id/img"
        android:layout_toRightOf="@id/creator_name_tv"
        android:layout_alignTop="@id/creator_name_tv"
        android:textColor="@color/grey"
        android:gravity="center"
        android:text="1天前"
        android:textSize="@dimen/note_text_size"
        android:drawablePadding="3dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/tag_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_android"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/creator_name_tv"
        />

</RelativeLayout>